<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- Buyer Name -->
    <TextView
        android:id="@+id/textBuyerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order(Name: Buyer)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- Nested RecyclerView for items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="12dp"/>

    <!-- FIRST ROW: Accept / Reject / Finished -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:weightSum="3"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btnAcceptOrder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Accept Order"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnRejectOrder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Reject Order"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnFinishedPreparing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Order ready"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"/>
    </LinearLayout>

    <!-- SECOND ROW: Purple Button ALONE -->
    <Button
        android:id="@+id/btnCallVoip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Buyer"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:backgroundTint="@color/purple_500"/>

</LinearLayout>
